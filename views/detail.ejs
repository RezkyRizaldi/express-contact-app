<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <svg xmlns="http://www.w3.org/2000/svg" style="display: none">
        <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
          <path
            d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"
          />
        </symbol>
      </svg>
      <% if (!contact) { %>
      <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center fw-bold" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24"><use xlink:href="#exclamation-triangle-fill" /></svg>
        Data contact not found.<a href="/contact" class="alert-link fw-normal ms-2">&laquo; Back to Contact Page</a>
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.name %>" class="btn btn-info badge rounded-pill">Edit<i class="bi bi-pencil-square ms-1"></i></a>
          <form action="/contact?_method=DELETE" method="POST" class="d-inline">
            <input type="hidden" name="_id" value="<%= contact._id %>" />
            <button type="submit" class="btn btn-danger badge rounded-pill" onclick="return confirm('Are you sure you want to delete this data?')">Delete<i class="bi bi-trash-fill ms-1"></i></button>
          </form>
          <a href="/contact" class="card-link d-block mt-3">&laquo; Back to Contact Page</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
